{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": ".build",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "es7", "esnext"],
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": ["node_modules", ".build"]
}
